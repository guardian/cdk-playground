#!/usr/bin/env bash

set -e

(
  cd cdk
  npm ci
  npm run lint
  npm run test
  npm run synth
  npm run build:event-forwarder
)

(
  cd lambda
  zip cdk-playground-lambda.zip handler.js
)

sbt clean compile test debian:packageBin

mkdir -p dist/cdk-playground
cp target/cdk-playground_1.0-SNAPSHOT_all.deb "dist/cdk-playground/cdk-playground-$GITHUB_RUN_NUMBER.deb"

mkdir -p dist/cdk-playground-testing-subnets
cp target/cdk-playground_1.0-SNAPSHOT_all.deb "dist/cdk-playground-testing-subnets/cdk-playground-testing-subnets.deb"
